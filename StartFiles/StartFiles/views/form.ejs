<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/nav'); -%>
  <section class="w50">
    <form name="myform" method="Post" onsubmit="return formSubmit();"  action="" >
      <label>Name</label>
      <input id="name" placeholder="First Last" type="text" name="name"><br/>

      <label>Email</label>
      <input id="email" placeholder="email@domain.com" type="text" name="email"><br/>

      <label>Phone</label>
      <input id="phone" placeholder="123-123-1234" type="phone" name="phone"><br/>

      <label>Plan 1</label>
      <input id="plan1" placeholder="plan1" type="text" name="plan1"><br/>

      <label>Plan 2</label>
      <input id="plan2" placeholder="plan2" type="text" name="plan2"><br/>

      <label>Plan 3</label>
      <input id="plan3" placeholder="plan3" type="text" name="plan3"><br/>

     


      <input type="submit" value="Submit">
 
        </p> 
    </form>  
</section>
<section class="w50">
  <div class="formData">
    <%
      if(typeof(errors) != 'undefined'){
        for(var error of errors){
        %>
          <p class="errors"><%= error.msg %></p>
        <%
        }
      }
    %>
    <%
      if(typeof(total) != 'undefined'){
        %>
        <p id="formResult">Your Plans:</p>
        <table>
          <tr>
            <th>Name: </th>
            <td><%= name %></td>
          </tr>
          <tr>
            <th>Email: </th>
            <td><%= email %></td>
          </tr>
          <tr>
            <th>Phone number: </th>
            <td><%= phone %></td>
          </tr>
          <tr>
            <th> Plan 1: </th>
            <td><%= plan1 %></td>
          </tr>
          <tr>
            <th> Plan2: </th>
            <td><%= plan2 %></td>
          </tr>
          <tr>
            <th> Plan3 : </th>
            <td><%= plan3 %></td>
          </tr>
          <tr>
            <th> Discount : </th>
            <td><%= discount.toFixed(2) %></td>
          </tr>
          <tr>
            <th> sub total : </th>
            <td><%= subTotal.toFixed(2) %></td>
          </tr>
          <tr>
            <th> tax : </th>
            <td><%= tax.toFixed(2) %></td>
          </tr>
          <tr>
            <th> Total : </th>
            <td><%= total.toFixed(2) %></td>
          </tr>

        
          
        </table>
        <%
      }
    %>
    
  </div>
</section>
<div class="clear"></div>
</body>
<%- include('layouts/footer'); -%>


